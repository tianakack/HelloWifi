<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize My theme here. -->

        <item name="actionBarSize">48dp</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:spinnerDropDownItemStyle">@style/MyDropDownItemStyle</item>
    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/colorBar</item>
        <item name="titleTextStyle">@style/MyTextAppearance</item>
    </style>

    <style name="MyDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/MyTextAppearance</item>
    </style>

    <style name="MyTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="MyTextView_Caption">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="MyTextView_Detail">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="MyTextView_Comment">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="MyTextView_Remark">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">10dp</item>
    </style>

    <color name="red">#800</color>
    <color name="green">#080</color>
    <color name="blue">#008</color>

    <color name="dark_white">#DDD</color>
    <color name="light_gray">#BBB</color>
    <color name="gray">#888</color>
    <color name="dark_gray">#444</color>
    <color name="light_black">#222</color>

    <color name="colorBar">#0A4</color>

</resources>
