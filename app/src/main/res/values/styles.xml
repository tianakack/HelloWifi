<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize My theme here. -->

        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/green</item>
    </style>

    <style name="MyTextView_Caption">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="MyTextView_Detail">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">13dp</item>
    </style>

    <color name="light_gray">#BBB</color>
    <color name="gray">#888</color>
    <color name="dark_gray">#444</color>
    <color name="red">#800</color>
    <color name="green">#080</color>
    <color name="blue">#008</color>

</resources>
